<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MButton">
        <item name="android:background">@drawable/bg_button_red</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/fira_medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:minHeight">@dimen/_24sdp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingStart">@dimen/standardMargin</item>
        <item name="android:paddingEnd">@dimen/standardMargin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textMini</item>

    </style>

    <style name="MButton.Secondary">
        <item name="android:background">@drawable/bg_button_secondary</item>
        <item name="android:textColor">@color/customPrimary</item>
    </style>

    <style name="MButton.Medium">
        <item name="android:minHeight">@dimen/_28sdp</item>
        <item name="android:textSize">@dimen/textSubTitle</item>
    </style>

    <style name="MRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/textSecondary</item>
        <item name="colorControlActivated">#FFC107</item>
    </style>

    <style name="MTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/textRegular</item>
        <item name="android:fontFamily">@font/fira_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>